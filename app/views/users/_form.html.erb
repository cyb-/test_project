<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :role, collection: User.roles.collect { |r| [r.first.humanize, r.first] }, prompt: nil %>
  </div>

  <div class="form-actions">
    <%= f.button :button %>
  </div>
<% end %>
