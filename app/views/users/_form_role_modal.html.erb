<div id="modal-role-<%= @user.id %>" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <%= simple_form_for(@user, url: update_role_user_path(@user), method: :put) do |f| %>
        <div class="modal-body">
          <div class="form-inputs">
            <%= f.input :role, collection: User.roles.collect { |r| [r.first.humanize, r.first] }, prompt: nil %>
          </div>
          <div class="form-actions">
            <%= f.button :button, t("actions.update_role") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
