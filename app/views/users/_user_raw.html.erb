<tr>
  <td><%= link_to user.name, user, class: 'show-user-link' %></td>
  <td class="user-role">
    <% if can? :update_role, user %>
      <%= link_to edit_role_user_path(user), remote: true, id: "link-role-modal-#{user.id}", class: "btn btn-default btn-role" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
        <span id="user-role-<%= user.id %>"><%= user.role %></span>
      <% end %>
    <% else %>
      <%= user.role %>
    <% end %>
  </td>
</tr>
